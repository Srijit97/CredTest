<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cardBackground"
        android:layout_width="150dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        android:layout_margin="10dp"
       app:cardBackgroundColor="#345"
        android:layout_height="175dp">

        <LinearLayout android:paddingStart="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/payment_check_listener"
                android:layout_width="70dp"
                android:layout_height="70dp"/>

            <TextView
                android:id="@+id/amount_text"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4247/mo"
                android:textSize="17sp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/duration_text"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:text="for 9 months"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/calculation_text"
                android:textSize="11sp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#adadad"
                android:text="See calculations"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>